{
  "name": "github-action-sonarcloud",
  "version": "0.2.2",
  "description": "This action integrates SonarCloud feedback into a GitHub Repository.",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "prebuild": "npm run type-check",
    "check": "npm-run-all format:check type-check lint",
    "fix": "npm-run-all lint:fix format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky",
    "release": "node ./bin/release.mjs",
    "prerelease": "npm run build",
    "test": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@actions/exec": "^1.1.1",
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "semver": "^7.6.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "dist/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-imports": "error"
    }
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)": "<rootDir>/src/$1"
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts?$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/tsconfig.json",
          "useESM": true
        }
      ]
    }
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  }
}
